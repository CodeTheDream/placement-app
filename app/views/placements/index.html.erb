<div>
  <% if params[:search] %>
  <%= link_to 'Download Search Results', placements_path(format: :xlsx), class: 'btn btn-primary mt-2' %>
  <% end %>



</div>

<%=
  link_to 'Upload from Excel',
  new_placements_import_path, class: 'btn btn-primary mt-2'
%>
  


  


<h2>Placement Cart</h2>
<% @cart.cart_placements.each do |cart_placement| %>
<div class='card bg-light col-5 rounded mb-0'>
  <div class='card-body'>
    <div>
      <%= cart_placement.placement.name %><br>
      <%= cart_placement.placement.address %><br>
      <p><%= cart_placement.placement.city %>, <%= cart_placement.placement.state %>, <%= cart_placement.placement.zip %></p>
      <%= link_to 'Remove Placement from Cart', remove_cart_path(@cart, cart_placement_id: cart_placement.id), method: :delete, class: 'btn btn-danger mt-2' %>
    </div>
  </div>
</div>
<% end %>

</div>

