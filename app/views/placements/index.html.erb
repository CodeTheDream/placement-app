<div class='mt-4 mb-4'>
  <h3>Placement Index</h3>
</div>


<h4>Click on a placement to view details</h4>


<!-- <div class='row'> -->
  <div class='card bg-light col-6 rounded mb-0'>
    <div class='card-body'>
        <form action="/" method="get">
          <div class='row form-group'>
            <input type="text" name="search" placeholder="Search" class='form-control col-10 mr-2'>
            <input type="submit" value="Go", class='btn btn-primary col-1'>
          </div>
        </form>
    </div>
  </div>
  <%= link_to 'New Search', placements_path, class: 'btn btn-primary mt-2' %>


<% if params[:search] %>
  <div class='card bg-light col-3 rounded mt-2'>
    <div class='card-body'>
      <% @placements.each do |placement| %>
        <div>
          <p><%= link_to placement.name, placement_path(placement.id) %></p>
          <%= placement.address %>
          <p><%= placement.city %>, <%= placement.state %> <%= placement.zip %></p>
          <%= link_to 'Edit', edit_placement_path(placement.id), class: 'btn btn-primary mt-2' %>
          <%#= link_to 'Add Placement to Cart', add_cart_path(@cart, placement_id: placement.id), method: :post, class: 'btn btn-primary mt-2' %>
          <%= form_for @cart_placement do |f| %>
            <%= f.hidden_field :placement_id, value: placement.id %>
            <%= f.submit "Add Placement to Cart", class: 'btn btn-primary mt-2' %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <% end %>
  

