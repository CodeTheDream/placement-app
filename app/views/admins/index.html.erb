<h3 class='mt-4 mb-4 text-center'>Admin Tools</h3>


<div class='text-center'>
  
<!-- Dropdown for forms -->

  <%= link_to "Create New User", new_registration_path(resource_name), class: 'btn btn-primary mt-2 mb-2' %>
  <%= link_to 'Create New Licensee', new_licensee_path, class: 'btn btn-primary mt-2 mb-2' %>
  <%= link_to 'Create New Placement', new_placement_path, class: 'btn btn-primary mt-2 mb-2' %>
</div>

<!-- Dropdown for spreadsheets -->

<div class='text-center mt-2'>
  <%= link_to 'Download Licensees', licensees_path(format: :xlsx), class: 'btn btn-secondary' %>
  <%= link_to 'Upload Licensees', new_licensees_import_path, class: 'btn btn-secondary' %>
  <%= link_to 'Download Placements', placements_path(format: :xlsx), class: 'btn btn-secondary' %>
  <%= link_to 'Upload Placements', new_placements_import_path, class: 'btn btn-secondary' %>
  
</div>

<div class='text-center'>
  <%= link_to 'View Comments', comments_path, class: 'btn btn-secondary' %>
  
</div>


 <div class='shadow-sm card bg-light col-8 rounded mt-3 shadow-sm mx-auto'>
    <div class='card-body'>
        <h4>Users</h4>
        <% @users.each do |user| %>
            <!--The current admin shouldn't be able to edit their own profile under users. 
            They need to do it under they're own profile page. 
            The if statement prevents them from seeing their own profile under all users-->
            <% if user != current_user %>
                <ul class='list-group'>
                    <li class='list-group-item mb-1 shadow-sm'>
                        <%= user.first_name %> <%= user.last_name %> | <%=user.email %> 
                        <%= link_to 'Edit', edit_admin_path(user), class: 'btn btn-primary btn-sm ml-2' %>
                    </li>
                </ul>
            <% end %>
        <% end %>
    </div>
</div>


