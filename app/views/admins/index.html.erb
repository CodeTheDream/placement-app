<h3 class='mt-4 mb-4'>Admin Tools</h3>


<div>
  
<!-- Dropdown for forms -->

  <%= link_to "Create New User", new_registration_path(resource_name), class: 'btn btn-primary mt-2 mb-2' %>
  <%= link_to 'Create New Licensee', new_licensee_path, class: 'btn btn-primary mt-2 mb-2' %>
  <%= link_to 'Create New Placement', new_placement_path, class: 'btn btn-primary mt-2 mb-2' %>

<!-- Dropdown for spreadsheets -->

  <%= link_to 'Download Licensees', licensees_path(format: :xlsx), class: 'btn btn-info' %>
  <%= link_to 'Upload Licensees', new_licensees_import_path, class: 'btn btn-info' %>
  <%= link_to 'Download Placements', placements_path(format: :xlsx), class: 'btn btn-info' %>
  <%= link_to 'Upload Placements', new_placements_import_path, class: 'btn btn-info' %>
  
</div>


 <div class='shadow-sm card bg-light col-6 rounded mt-3 shadow-sm'>
    <div class='card-body'>
        <h4>Users</h4>
        <% @users.each do |user| %>
            <ul class='list-group'>
                <li class='list-group-item mb-1 shadow-sm'>
                    <%= user.first_name %> <%= user.last_name %> | <%=user.email %> 
                    <%= link_to 'Edit', edit_admin_path(user), class: 'btn btn-primary btn-sm ml-2' %>
                </li>
            </ul>
        <% end %>
    </div>
</div>


