<div class= "admin card">
  <h2 class="title1 text-center">Admin Tools</h2>
  <div class='row'>
    <div class='col'>
      <div class="tool card", style="max-width: 450px;">
        <div class='row'>    
          <div class="col-4">
              <img src="https://icon-library.net/images/manage-icon/manage-icon-6.jpg", class="card-img">
          </div>
          <div class="col">
            <h5 class="title2">Manage Users</h5>
              <ul>
                <li><%= link_to 'Create New User', new_registration_path(resource_name),  class:"text-secondary font-weight-bold" %></li>
                <li><%= link_to 'View or Edit Users', view_users_path, class:"text-secondary font-weight-bold" %></li>
                <li><%= link_to 'View Comments', comments_path, class:"text-secondary font-weight-bold" %></li>
              </ul>
           </div>
        </div>
      </div>
    </div>
    
    <div class="col">
      <div class="tool card", style="max-width: 450px;">
        <div class='row'>    
          <div class="col-4">
              <img src="https://static.thenounproject.com/png/10156-200.png", class="card-img">
          </div>
          <div class="col">
            <h5 class="title2">Manage Services</h5>
              <ul>
                <li><%= link_to 'New Service' , new_service_path, class:"text-secondary font-weight-bold" %></li>
                <li><%= link_to 'View or Edit Services', services_path,  class:"text-secondary font-weight-bold" %></li>
              </ul>
           </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class='row'>
    <div class='col'>
      <div class="tool card", style="max-width: 450px;">
        <div class='row'>    
          <div class="col-4">
              <img src="https://img.pngio.com/licence-business-licence-certificate-icon-png-and-vector-for-licence-png-512_512.png", class="card-img">
          </div>
          <div class="col">
            <h5 class="title2">Manage Licensees</h5>
              <ul>
                <li><%= link_to 'Create New Licensee', new_licensee_path, class:"text-secondary font-weight-bold" %></li>
                <li><%= link_to 'Upload Licensees', new_licensees_import_path, class:"text-secondary font-weight-bold" %></li>
                <li><%= link_to 'Download Licensees', licensees_path(format: :xlsx), class:"text-secondary font-weight-bold" %></li>
              </ul>
           </div>
        </div>
      </div>
    </div>
    
    <div class="col">
      <div class="tool card", style="max-width: 450px;">
        <div class='row'>    
          <div class="col-4">
              <img src="http://images.clipartpanda.com/house-outline-clipart-black-and-white-black-house-outline.svg", class="card-img">
          </div>
          <div class="col ">
            <h5 class="title2">Manage Placements</h5>
              <ul>
                <li><%= link_to 'Create New Placement', new_placement_path, class:"text-secondary font-weight-bold" %></li>
                <li><%= link_to 'Upload Placements', new_placements_import_path, class:"text-secondary font-weight-bold" %></li>
                <li><%= link_to 'Download Placements', placements_path(format: :xlsx), class:"text-secondary font-weight-bold" %></li>
              </ul>
           </div>
        </div>
      </div>
    </div>
  </div>
</div>

