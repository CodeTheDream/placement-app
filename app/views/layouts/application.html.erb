<!DOCTYPE html>
<html>
  <head>
    <title>Placements</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header">
      <h1>The Home Page</h1>
    </div>
    
     <div class="navbar">
       
        <% if current_user == nil %>
          <%= link_to 'Log In', new_user_session_path, class: 'btn btn-nav' %>
        <% else %>
          <%= link_to "Log out: #{current_user.email}", destroy_user_session_path, method: :delete, 
          class: 'btn'  %>
          <%= link_to 'Profile', edit_profile_path(current_user), 
          class: 'btn' %>
        <% end %>
    
        <% if current_user != nil %>
          <%= link_to 'Placements', placements_path, class: 'btn' %>
          <%= link_to 'Licensees', licensees_path, class: 'btn' %>
          <%= link_to 'Cart', cart_path(current_user), class: 'btn' %>
          <%= link_to 'Announcements', announcements_path, class: 'btn' %>
        <% end %>
        
        <% if current_user && current_user.admin? %>
          <%= link_to "Admin Tools", admins_path, class: 'btn' %>
        <% end %>
        
        <%= link_to 'Advanced Search', search_index_path, class: 'btn' %>
        
        
        <div>
          <form action="/" method="get" class="form-inline">
            <input type="text" name="query" id="query" placeholder="Simple Search..." class="form-control mr-sm-2">
            <input type="submit" value="Go", class='btn btn-search'>

          </form>
          
        </div>
        
        
    
    </div>

    <div align='left'>
    <% if flash[:notice] %>
      <div class='alert alert-success mt-2 mb-2 col-6 text-center'><%= flash[:notice] %></div>
    <% end %>
    <% if flash[:alert] %>
      <div class='alert alert-danger mt-2 mb-2 col-6 text-center'><%= flash[:alert] %></div>
    <% end %>
    </div>
    <div>
      <%= yield %>
    </div>
    
   
    <div class="footer">
      <p>This is the footer.</p>
    </div>
  </body>
</html>
