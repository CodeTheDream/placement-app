<h3 class='page-header'>All Comments</h3>

<% @comments.each do |c| %>
    <div class='shadow-sm card col-8 rounded mb-2 mx-auto text-white'>
        <div class='card-body'>
            Placement: <%= link_to "#{c.placement.name}", placement_path(c.placement.id) %> <br>
            <ul class='list-group shadow'>
                <li class='list-group-item'><%= c.text %></li>
            </ul>
            <div class='mt-2'>
                By <%= c.user.first_name %> <%= c.user.last_name %>
                at <%= c.created_at.strftime("%-I:%M %P on %-m/%-d/%y") %><br>
                <% if current_user && current_user.admin? %>
                    <%= link_to 'Delete', comment_path(c.id), method: :delete, :data => {:confirm => "Are you sure?"}, class: 'btn btn-danger mt-2' %>
                <% end %>
            </div>
        </div>
    </div>
<% end %>

