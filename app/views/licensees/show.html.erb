<br>
<p class='btn btn-primary'>Licensee Details</p>

<div class='card bg-light col-6 rounded mb-0'>
    <div class='card-body'>
        <h4><%= @licensee.facility_name %></h2>
        <ul class='list-group'>
            <li class='list-group-item'>Contact: <%= @licensee.contact_name %></li>
            <li class='list-group-item'>Phone: <%= @licensee.phone %></li>
            <li class='list-group-item'>Fax: <%= @licensee.fax %></li>
            <li class='list-group-item'><%= @licensee.address %></li>
            <li class='list-group-item'><%= @licensee.city %>, <%= @licensee.state %> <%= @licensee.zip %></li>
        </ul>

        <br>
        <div class='btn btn-primary'>
            <%= link_to 'Edit', edit_licensee_path(params[:id]) %>
        </div>
        <div class='btn btn-danger'>
            <%= link_to 'Delete', licensee_path(params[:id]), method: :delete %>
        </div>
    </div>
</div>



<br>
<% @licensee.comments.each do |c| %>
    <div class="box">
        <%= c.text %>
        <br>
        <p>By: <%= c.user.email %></p>
        <p> At: <%= c.created_at %></p>
        <%= link_to 'Delete', comment_path(c.id), method: :delete %>
    </div>
<% end %>


