<div class='card rounded mt-4 shadow-sm p-4 col-6'>
  <form action="/" method="get">
    <div class='row form-group'>
      
      <input type="text" name="query" id="query" placeholder=
      "Text search: Enter a county, city or name" class='form-control col shadow mt-1 mb-1'>
      
    </div>
    
    <div class='row form-group'>
      
      <select class='shadow form-control col' name="filtercounty" id="filtercounty">
        <option value="">County (optional)</option>
        <option>Alamance</option> 
        <option>Johnston</option>
        <option>Wake</option>
        <option>Granville</option>
      </select>
      
      <select class='shadow form-control col ml-2' name="filterservice" id="filterservice">
        <option value="">Service (optional)</option>
        <%= @services.each do |s| %>
          <option value="<%= s.id %>"><%= s.name %></option>
        <% end %>
      </select>
    
    </div>
    
    <div class='row form-group'>
      <input type="submit" value="Go", class='btn btn-search col'>
    </div>
  </form>
</div>


<% if (params[:filtercounty] || params[:filterservice] || params[:query]) && @placements != nil %> 

<h3 class='page-header'>Search Results</h3>

<div class='card col-8 rounded shadow-sm'>
  <h4 class='mt-3'>Click on a home or licensee to view details</h4>
  
  <div class='card-body text-white'>
    Query: "<%= params[:query] %>"     |  
    County: <%= params[:filtercounty] %>     |  
    Service: <%= params[:filterservice] %>     |  
    Results: <%= @placements.count %>
  </div>
  
  <div class='text-white'><%= @placements.inspect %></div>
  
  <div class='card-body'>
    <%= link_to 'Add all search results to cart', add_all_to_carts_path(
    placement_ids: @placements.ids), method: :get, 
    class: 'btn btn-standard mb-4 font-weight-bold p-2' %>
    
    <% @placements.each do |p| %>
      <ul class='list-group'>
        <li class='list-group-item mt-2 shadow'>
          <%= link_to p.name, placement_path(p.id), 
          class: 'border-bottom border-primary font-weight-bold' %>
          <br>
          <%= p.address %>, <%= p.city %>, <%= p.state %> <%= p.zip %>
          <br>
          <%= link_to 'Add to Cart', add_carts_path(placement_id: p.id), 
          method: :post, class: 'btn btn-standard mt-2' %>
        </li>
      </ul>
    <% end %>
  </div>
  
</div> 

