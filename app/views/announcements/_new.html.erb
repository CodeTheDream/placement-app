<div class='card col-6 rounded mt-4 mx-auto'>
  <div class='card-body px-4 pb-4 m-2'>

    <h4 class='title'>Make an announcement</h4>
    
    <%= form_for @announcement do |f| %>
      <%= f.hidden_field :id, :value => @announcement.id %>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <%= f.text_area :text, placeholder: 'Announcement body', class: 'form-control mx-auto mb-2 shadow' %>

      
      <div class='row'>
        
        <div class='col-6'>
        <%= f.select :placement_id, 
        options_for_select(@placements.collect { |p| [p.name, p.id]}), 
        {:prompt => 'Placement (optional)'},
        {:class => 'shadow form-control'}%> 
        </div>
        
        <!--
        <div class-'col'>
        <%#= f.select :licensee_id, 
        options_for_select(@licensees.collect { |l| [l.facility_name, l.id]}), 
        {:prompt => 'Licensee (optional)'},
        {:class => 'shadow form-control col'} %>
        </div>
        -->
        
        <div class='col-3'>
          <%= f.label :bed_available, 'Open Bed?', class: 'text-white mx-auto mt-2' %>
          <%= f.check_box :bed_available, class: 'shadow ml-2 mt-2' %>
        </div>
        
        <div class='col-3'>
        <%= f.submit 'Post', class: 'btn btn-info px-5' %>
        </div>
        
      </div>
      

   
    <% end %>
  
  </div>
</div