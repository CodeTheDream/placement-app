<h3 class='page-header'>Announcements</h3>

<%= render 'new' %>
<br>
<h3 class='page-header'>Most Recent</h3>

<div class='shadow-sm card col-10 rounded mb-2 mx-auto text-white'>
    <div class='card-body'>  
    <% @announcements.each do |a| %>
      <ul class='list-group rounded'>
        <li class='list-group-item mb-1'><%= a.text %></li>
        <li class='list-group-item'>
          <div class='row'>
          <p class='col'>Placement: 
          <% if a.placement_id != nil %>
            <%= link_to a.placement.name, placement_path(a.placement.id) %>
          <% else %>
            Not provided
          <% end %>
          </p>
          <p class='col'>Licensee: 
          <% if a.licensee_id != nil %>
            <%= link_to a.licensee.facility_name, licensee_path(a.licensee.id) %>
          <% else %>
            Not provided
          <% end %>
          </p>
          <p class='col'>Bed available? 
          <% if a.bed_available == true %>
            Yes
          <% else %>
            No
          <% end %>
          </p>
        </div>
        </li>
      </ul>
        
      <div class='row mb-3'>
        <div class='mt-2 col'>
          By <%= a.user.first_name %> <%= a.user.last_name %>
          at <%= a.created_at.strftime("%-I:%M %P on %-m/%-d/%y") %>
          <br>
          <% if current_user && current_user == a.user || current_user && 
          current_user.admin?  %>
            <%#= link_to 'Edit', edit_announcement_path(a.id), class:'btn btn-standard' %>
            <%= link_to 'Delete', announcement_path(a.id), method: :delete, :data => 
            {:confirm => "Are you sure?"}, class: 'btn btn-danger' %>
          <% end %>
        </div>
        </div>  
    <% end %>
</div>
</div>

